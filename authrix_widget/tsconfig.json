{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "index.d.ts",
        "declarations.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}